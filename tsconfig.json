{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "downlevelIteration": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "src/**/__tests__/*"]
}
